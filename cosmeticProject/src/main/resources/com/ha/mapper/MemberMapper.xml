<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ha.mapper.MemberMapper">

	<!--회원 가입 -->
	<insert id="memberJoin">
		insert into cos_member values(#{memberId},
		#{memberPw}, #{memberName}, #{phone}, #{Email}, #{Addr1},
		#{Addr2}, #{Addr3}, 5000 )
	</insert>
	
	<select id="idCheck" resultType="int">

		select count(*) from cos_member where memberId = #{memberId}

	</select>
	
	 <!-- 로그인 -->
      <select id="memberLogin">
      
         select memberId, memberName, money, point from cos_member where memberId = #{memberId} and memberPw = #{memberPw}
      
      </select>
</mapper>
  